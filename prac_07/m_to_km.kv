BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0'
            font_size: 48
            multiline: False
            size_hint_x: 0.75
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                id: increase_number
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                id: decrease_number
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert m to km'
